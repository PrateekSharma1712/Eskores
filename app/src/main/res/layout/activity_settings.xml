<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prateek.eskore.eskore.SettingsActivity">

    <ListView
        android:id="@+id/preferencesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/savePreferencesButton"
        android:scrollbars="none">

    </ListView>

    <TextView
        android:id="@+id/savePreferencesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE MY PREFERENCES"
        android:background="@color/theme_default_accent_light"
        android:textStyle="bold"
        android:textColor="@color/theme_default_text_secondary"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="12dp"/>


</RelativeLayout>
